<%- include('partials/header') %>

<h1>Contact Us</h1>
<div>
    <% if (contactInfo) { %>
        <h2>Address</h2>
        <p><%= contactInfo.address.street %><br>
            <%= contactInfo.address.street2 ? contactInfo.address.street2 + '<br>' : '' %>
            <%= contactInfo.address.city %>, <%= contactInfo.address.state %> <%= contactInfo.address.zipCode %></p>

        <h2>Phone</h2>
        <p><%= contactInfo.phoneNumber %></p>

        <h2>Customer Service Email</h2>
        <p><%= contactInfo.customerServiceEmail %></p>

        <h2>Sales Email</h2>
        <p><%= contactInfo.salesEmail %></p>

        <p><%- contactInfo.content %></p>
    <% } else { %>
        <p>Contact information not available.</p>
    <% } %>
</div>

<form action="/contact/submit" method="post">
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" required><br>

    <label for="email">Email:</label>
    <input type="email" id="email" name="email" required><br>

    <label for="phone">Phone:</label>
    <input type="tel" id="phone" name="phone"><br>

    <label for="comment">Comment:</label>
    <textarea id="comment" name="comment" required></textarea><br>

    <input type="submit" value="Submit">
</form>

<%- include('partials/footer') %>